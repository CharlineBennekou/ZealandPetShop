@page
@model ZealandPetShop.Pages.Login.CreateUserModel
@{
}

<h2>Bliv Medlem</h2>

<div class="row">
   <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.errorMessage
            </div>
        }
       @*Post metoden for AddUser*@
      <form method="post">

            <div class="form-group">
                <label asp-for="@Model.Fornavn" class="control-lable"></label>
                <input asp-for="@Model.Fornavn" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Efternavn" class="control-lable"></label>
                <input asp-for="@Model.Efternavn" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email" class="control-lable"></label>
                <input asp-for="@Model.Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Telefon" class="control-lable"></label>
                <input asp-for="@Model.Telefon" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Addresse" class="control-lable"></label>
                <input asp-for="@Model.Addresse" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password" class="control-lable"></label>
                <input asp-for="@Model.Password" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

      </form>
   </div>

</div>
