@page "{Id:int}"
@model ZealandPetShop.Pages.Login.LoggedInUserModel
@{
    ViewData["Title"] = "My Profile";
}

@* <h3 > Min Profil </h3> *@

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 pb-5">
            <!-- Account Sidebar-->
           <div class="author-text">
            <div class="author-text-profile">
                <div class="author-text avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="@Model.User.FirstName"
                </div>
                <div class="author-text-details">
                    <h5 class="author-text-name text-lg">@Model.User.FirstName</h5><span class="author-text-position">Joined February 06, 2024</span>
                </div>
            </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <a class="list-group-item" href="#">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Shopping Cart</div>
                            </div><span class="badge badge-secondary">6</span>
                        </div>
                    </a>
                    <a class="list-group-item" href="#">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Profile Settings</div>
                            </div><span class="badge badge-secondary">6</span>
                        </div>
                    </a>
                    <a class="list-group-item" href="#">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-heart mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">My Wishlist</div>
                            </div><span class="badge badge-secondary">3</span>
                        </div>
                    </a>
                    <a class="list-group-item" href="#">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-heart mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">My Orders</div>
                            </div><span class="badge badge-secondary">3</span>
                        </div>
                    </a>
                    
                </nav>
            </div>
        </div>
        <!-- Profile Settings-->
        <div class="col-lg-9 pb-6">
            <form class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.User.FirstName" class="control-label"></label>
                        <input asp-for="@Model.User.FirstName" class="form-control" />
                        <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.User.LastName" class="control-label"></label>
                        <input asp-for="@Model.User.LastName" class="form-control" />
                        <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.User.Email" class="control-label"></label>
                        <input asp-for="@Model.User.Email" class="form-control" />
                        <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.User.Phone" class="control-label"></label>
                        <input asp-for="@Model.User.Phone" class="form-control" />
                        <span asp-validation-for="@Model.User.Phone" class="text-danger"></span>
                    </div>
                  </div>
                <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.User.Address" class="control-label"></label>
                            <input asp-for="@Model.User.Address" class="form-control" />
                            <span asp-validation-for="@Model.User.Address" class="text-danger"></span>
                        </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-pass">New Password</label>
                        <input class="form-control" type="password" id="account-pass">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-confirm-pass">Confirm Password</label>
                        <input class="form-control" type="password" id="account-confirm-pass">
                    </div>
                </div>
                <div class="col-12">
                    <hr class="mt-2 mb-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <div class="custom-control custom-checkbox d-block">
                            <input class="custom-control-input" type="checkbox" id="subscribe_me" checked="">
                            <label class="custom-control-label" for="subscribe_me">Subscribe me to Newsletter</label>
                        </div>
                        <div class="user-knapper">
                            <div class="Deletebruger">
                            <form method="post">
                                <button type="submit" asp-page-handler="Delete">Delete</button>
                            </form>
                            </div>
                          <a class="btn btn-danger btn-sm edit-knap" type="button" title="Edit"
                          asp-page="UpdateUser" asp-route-id="@Model.User.Id">Opdater
                          </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

            
