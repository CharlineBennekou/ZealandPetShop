@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZealandPetShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ZealandPetShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
@*                 <a class="navbar-brand" asp-area="" asp-page="/Index">ZealandPetShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <div>
                            <a href="~/Index">
                                <img src="~/images/LogoZelandTekst.png" class="navBarImage" />
                            </a>
                        </div>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Forside</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Item/GetAllItems">Shop alt</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Item/GetAllDogs">Hund</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Item/GetAllCats">Kat</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Item/GetAllRabbits">Kanin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>

                        <li class="nav-item">
                           


                        </li> <li class="nav-item">
                           


                        </li>
                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link btn btn-link" asp-area="" asp-page="/LogIn/CreateUser">Bliv Medlem Her </a>
                    }
                    
                     @if (User.Identity.IsAuthenticated) //tjekker om bruger er logget ind
                    {
                        <p>Velkommen @Context.User.Identity.Name </p>
                        <p> 

                        </p>
                        <a class="nav-link btn btn-link" asp-area="" asp-page="/Login/LoggedInUser" asp-route-id="@int.Parse(Context.User.FindFirst(ClaimTypes.NameIdentifier)?.Value)">
                            <div class="profileb">
                                <button type="button" class="profilebutton"><b>Min Profil</b></button>
                            </div>
                        </a>
                        <a asp-page="Order/GetOrder" asp-route-id="@int.Parse(Context.User.FindFirst(ClaimTypes.NameIdentifier)?.Value)">
                           <div class="profileb">
                              <button type="button" class="detailinfo"><b>Min kurv</b></button>
                           </div>
                        </a>
                      
                        <a class="nav-link btn btn-link" asp-area="" asp-page="/LogIn/Logout">Log ud </a>
                    }
                    else
                    {
                        <a class="nav-link" asp-area="" asp-page="/Login/LogIn">Log ind</a> @* Viser log ind link *@

                       @*  <a class="nav-link btn btn-link" asp-area="" asp-page="/LogIn/UpdateUser"> Update Profile </a>
                        <a class="nav-link btn btn-link" asp-area="" asp-page="/LogIn/DeleteUser"> Delete Profile </a> *@

                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ZealandPetShop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>